<Window x:Class="Opgave26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opgave26"
        mc:Ignorable="d"
        Title="Hero Name Generator" Height="450" Width="700">
    <Grid>
        <TextBlock x:Name="tblNameNum" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30, 50, 0, 0" Text="Number of hero names 1 to 10:"/>
        <TextBox x:Name="tbxNameNum" MinHeight="20" MinWidth="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220, 50, 0, 0"/>
        <TextBox x:Name="tbxShowNames" MinHeight="300" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,50,0,0"/>
        <Button x:Name="btnFemaleNames" Width="150"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,120,0,0" Click="btnFemaleNames_Click">Generate Female Names</Button>
        <Button x:Name="btnmaleNames" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120, 160, 0, 0" Click="btnmaleNames_Click">Generate Male Names</Button>
        <Button x:Name="btnClearNames" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120, 195, 0, 0" Click="btnClearNames_Click">Clear Names</Button>
        
        

    </Grid>
</Window>
